		<%= hidden_field_tag "user_type", "brand" %>
		<%= label_tag(:sector, "Upload to this SECTOR") %>
		<%= select_tag(:sector, options_from_collection_for_select(Sector.all, :id, :name)) %>
		<br>
		<br>
		<%= file_field_tag(:file) %>
		<%= submit_tag("Load") %>

		<% end %>
		</div>
	</div>
</div>


