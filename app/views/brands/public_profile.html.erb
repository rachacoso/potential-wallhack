
<%= render partial: "shared/topbar" %>

<% content_for :javascript_foot do %>
	<%= javascript_tag do %>

	<% end %>
<% end %>

<%= render layout: "subnav" do %>
		<dl class="sub-nav">
		  <dd class="active"><%= link_to 'PUBLIC Profile', "#" %></dd>
		  <dd><%= link_to 'FULL Profile', brand_full_profile_url %></dd>
		  <dd><%= link_to 'EDIT Profile', brand_url %></dd>
		</dl>
<% end %>

	<div class="row">

		<div class="medium-12 columns">

			<div data-alert class="alert-box secondary radius">
				 

					<div class="row">
						<div class="small-6 columns">
							This is your Public Profile.<br>  [Stuff here about public profiles]
						</div>
						<div class="small-6 columns text-center">					
							<% percent = check_brand_public_profile %>
							<div class="progress small-12 <%= percent == 100 ? "success" : "" %>" style="margin: auto;">
							  <span class="meter" style="width: <%= percent %>%"></span>
							</div>
							<small>Your Public Profile is <%= percent == 100 ? "" : "#{percent}%" %> Complete!</small>
						</div>
					</div>

				</div><!-- /.alert-box success radius -->

		</div><!--/.medium-12 columns -->

	</div><!-- /.row -->

	<div class="row">

		<div class="medium-12 columns previewtile">
			

			<%= render partial: "/shared/profile/brand_public_profile_tiles", locals: {profile: @profile} %>

			
		</div>

	</div><!-- /.row -->


