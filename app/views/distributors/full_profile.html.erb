
<%= render partial: "shared/topbar" %>

<% content_for :javascript_foot do %>
	<%= javascript_tag do %>

	<% end %>
<% end %>

<%= render layout: "subnav" do %>
		<dl class="sub-nav">
		  <dd><%= link_to 'PUBLIC Profile', distributor_public_profile_url%></dd>
		  <dd class="active"><%= link_to 'FULL Profile', "#" %></dd>
		  <dd><%= link_to 'EDIT Profile', distributor_url %></dd>
		</dl>
<% end %>


	<div class="row">

		<div class="medium-12 columns">
			<div data-alert class="alert-box secondary radius">
		  
				<div class="row">

					<div class="small-6 columns">
						<p>
							This is your Full Profile.<br>  [Stuff here about public profiles]
						</p>
					</div>

					<div class="small-6 columns text-center">
						<% percent = check_distributor_full_profile %>
						<div class="progress small-12 <%= percent == 100 ? "success" : "" %>" style="margin: auto;">
						  <span class="meter" style="width: <%= percent %>%"></span>
						</div>
						<small>Your Full Profile is <%= percent == 100 ? "" : "#{percent}%" %> Complete!</small>
					</div>

				</div>
			</div>
		</div>

	</div>

	<div class="row">
		<div class="medium-12 columns previewtile">

			<%= render partial: "/shared/profile/distributor_full_profile_tiles", locals: {profile: @profile}  %>

		</div><!-- /.medium-12 .columns .previewtile -->
	</div><!-- /.row -->
