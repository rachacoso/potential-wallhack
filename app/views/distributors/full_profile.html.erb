
<%= render partial: "shared/topbar" %>

<div class="row collapse">
	<div class="small-11 small-centered columns marketplace-header">
		<%= image_tag "logo_header_marketplace.svg" %>
	</div>
</div>

<div class="row">
	<div class="small-11 small-centered columns marketplace-subpage-header">
	<h1>YOUR PROFILE</h1>
	<h3>Preview &amp; Edit your marketplace profile.</h3>
	</div>
</div>

<div class="row collapse">
	<div class="small-11 small-centered columns marketplace-content">


		<div class="row collapse">
			<div class="medium-6 push-6 columns">
				<ul class="button-group even-3">
			  <li><%= link_to 'PUBLIC Profile', distributor_public_profile_url, class: "tiny button secondary" %></li>
			  <li><%= link_to 'FULL Profile', "#", class: "tiny button info"%></li>
			  <li><%= link_to 'EDIT Profile', distributor_url, class: "tiny button secondary" %></li>
			  </ul>

				<div class="panel">
					<div class="row">
						<div class="small-6 columns">
								<h2>Full Profile</h2>
									<small><span data-tooltip aria-haspopup="true" class="has-tip radius" title="Your full profile is viewable only by premium brand subscribers. It contains information that helps brands determine whether your company is a good fit for their international expansion.">What is this?</span></small>							
						</div>
						<div class="small-6 columns">					
							<div class="row">
								<div class="small-12 columns text-center">
									<% percent = check_distributor_full_profile %>
									<div class="progress small-12 <%= percent == 100 ? "success" : "" %>" style="margin: auto;">
									  <span class="meter" style="width: <%= percent %>%"></span>
									</div>
									<small>Your Full Profile is <%= percent == 100 ? "" : "#{percent}%" %> Complete!</small>
								</div>
							</div>
						</div>			
					</div>
				</div>

			</div>
			<div class="medium-6 pull-6 columns">


				
			</div><!--/.medium-6 pull-6-->
		</div>

		<%= render partial: "/shared/profile/distributor_full_profile", locals: {profile: @profile}  %>

	</div>
</div><!-- /.row -->
	