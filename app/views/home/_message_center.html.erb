<div class="panel">
	<h2>Message Center</h2>
	<hr>

	<% if @messages_unread > 0 %>
		<div id="mc-unread-messages">	
			<small>
				<span class="alert label"><%= @messages_unread %> unread message<%= @messages_unread > 1 ? "s" : "" %></span>
			</small>
			<div id="mc-unread-messages-inner">
			<% @unread_list.each do |m| %>
				<% this_one = m.send(@current_user.type_inverse?) %>
				<% a,b  = unread_count_from_match(this_one) %>
				<%= link_to this_one.company_name, view_match_url(this_one.id, "na") %>
				<strong><small><%= b %> message<%= b > 1 ? "s" : "" %></small></strong>
				<br>
				<% unless m == @unread_list.last %>
					<hr style="border-top: 1px solid #ccc">
				<% end %>
			<% end %>
			</div>
		</div>
	<% else %>
		<p><small>No unread messages</small></p>
	<% end %>
	
	<% if @new_contact_messages > 0 %>
		<div id="mc-new-contacts">
			<small>
				<span class="success label"><%= @new_contact_messages %> <strong>incoming</strong> contact request<%= @new_contact_messages > 1 ? "s" : "" %></span> 
			</small>
		
			<div id="mc-new-contacts-inner">
			<% @incoming_requests_list.each do |m| %>
				<% this_one = m.send(@current_user.type_inverse?) %>
				<%= link_to this_one.company_name, view_match_url(this_one.id, "na") %>
				<% unless m == @incoming_requests_list.last %>
					<hr style="border-top: 1px solid #ccc">
				<% end %>
			<% end %>
			</div>
		</div>
	<% else %>
		<p><small>No incoming contact requests</small></p>
	<% end %>

	<% if @outgoing_requests_list.count > 0 %>
		<div id="mc-new-contacts">
			<small>
				<span class="success label"><%= @outgoing_requests_list.count %> <strong>outgoing</strong> contact request<%= @outgoing_requests_list.count > 1 ? "s" : "" %></span> 
			</small>
		
			<div id="mc-new-contacts-inner">
			<% @outgoing_requests_list.each do |m| %>
				<% this_one = m.send(@current_user.type_inverse?) %>
				<%= link_to this_one.company_name, view_match_url(this_one.id, "na") %>
				<% unless m == @outgoing_requests_list.last %>
					<hr style="border-top: 1px solid #ccc">
				<% end %>
			<% end %>
			</div>
		</div>
	<% else %>
		<p><small>No outgoing contact requests</small></p>
	<% end %>

</div>