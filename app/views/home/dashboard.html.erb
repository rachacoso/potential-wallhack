	<% if @current_user.distributor %>

	<div class="row" data-equalizer>
		<div class="medium-4 columns">

				<div class="row">
					<div class="small-12 columns" data-equalizer-watch>
						<div class="panel">
							<% percent = check_distributor_public_profile %>
							Your Public Profile is <br><br>
							<div class="progress small-12 medium-8 <%= percent == 100 ? "success" : "" %>">
							  <span class="meter" style="width: <%= percent %>%"></span>
							</div>
							<%= percent %>% Complete!
							<br><small>[some info on your public profile]</small>
						</div>
						<div class="panel">
							<% percent = check_distributor_public_profile %>
							Your Full Profile is <br>
