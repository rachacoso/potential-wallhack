
<% if @current_user.subscriber? %>

	<% if matches.blank? %>
		<div class="row">
			<div class="small-10 small-centered columns previewtile match-empty text-center">
				<% if action_name == "index" %>
					<h2>No Distributors</h2> <br>Please try <%= link_to 'another country', all_matches_url %>.
				<% elsif action_name == "index_saved_matches" %>
					<h2>No Saved Distributors</h2> <br>You can save distributor matches on the <%= link_to 'All Distributors', all_matches_url %> screen.
				<% elsif action_name == "index_contacted_matches" %>
					<h2>You haven't contacted any distributors</h2> <br>You can contact distributors on the <br><%= link_to 'All Distributors', all_matches_url %> or <%= link_to 'Saved Distributors', saved_matches_url %> screens.
				<% elsif action_name == "index_incoming_matches" %>
					<h2>No distributors have contacted you</h2><br>Make sure <%= link_to 'Your Profile', brand_full_profile_url %>  is complete.
				<% elsif action_name == "search" %>
					<h2>No distributors found</h2> <br> Please try adjusting your search.					
				<% end %>
			</div>
		</div>
	<% else %>

		<div class="row" style="padding: 0px;">
			<div class="small-12 columns">

				<table width="100%">

				  	<tbody>

						<% matches.sort_by {|x| [x.country_of_origin, x.company_name] }.each do |match| %>
						<tr id="pot_<%= match.id %>">
							<td>

							<%= render partial: "shared/profile/profile_list_tile_small_h", locals: {match: match} %>

							</td>

						</tr>
						<% end %>

						</tbody>
			</table>
			</div>
		</div>
	<% end %>

<% else %>

	<% if action_name == "index" %>

		<% if matches.blank? %>
			<div class="row">
				<div class="small-10 small-centered columns previewtile text-center">
						<h2>No Distributors</h2> <br>Please try altering your filter selections.
				</div>
			</div>
		<% else %>

			<div class="row">
				<div class="small-12 columns">

					<table width="100%">
						  <thead>
						  	<tr><th width="800" colspan="2">
						  		<%= render "counts" %>
						  	</th></tr>	  	
						  </thead>
					  	<tbody>
							<% matches.sort_by {|x| [x.country_of_origin, x.company_name] }.each do |match| %>
							<tr id="pot_<%= match.id %>">
								<td>
									
								<%= render partial: "shared/profile/profile_list_tile", locals: {match: match} %>

								</td>

							</tr>
							<% end %>
							</tbody>
					</table>

				</div>
			</div>
		<% end %>

	<% else %>

		<div class="row">
			<div class="small-10 small-centered columns previewtile text-center">
				<h2>Available to subscribers only</h2>
				<% if @new_contact_messages > 0 %>
					<h3>You have been contacted by <%= @new_contact_messages %> <%= @current_user.type_inverse? %><%= @new_contact_messages > 1 ? "s" : "" %><br>
						<%= link_to 'SUBSCRIBE', '#' %> to connect!
					</h3>
				<% end %>				
			</div>
		</div>


	<% end %>

<% end %>