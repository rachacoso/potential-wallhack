<% if action_name == "index" %>
	 <div class="matchcount"><%= @matches.count %> <%= @matches.count > 1 ? "matches" : "match" %></div>
<% elsif action_name == "index_saved_matches" %>
	<div id="saved-match-count" class="matchcount"><%= @matches.count %> <%= @matches.count > 1 ? "saved matches" : "saved match" %></div>
<% elsif action_name == "index_contacted_matches" %>
	<div id="saved-match-count" class="matchcount"><%= @matches.count %> <%= @matches.count > 1 ? "matches you are contacting" : "match you are contacting" %></div>
<% elsif action_name == "index_incoming_matches" %>
	<div id="saved-match-count" class="matchcount"><%= @matches.count %> <%= @matches.count > 1 ? "matches contacting you" : "match contacting you" %></div>		
<% end %>