<% if @current_user.subscriber? %>

	<% if @matches.blank? %>
		<div class="row">
			<div class="small-10 small-centered columns previewtile text-center">
				<% if action_name == "index" %>
					<h2>No Brands</h2> <br>Please try altering your filter selections.
				<% elsif action_name == "index_saved_matches" %>
					<h2>No Saved Brands</h2> <br>You can save brand matches on the <%= link_to 'All Brands', all_matches_url, remote: true %> screen.
				<% elsif action_name == "index_contacted_matches" %>
					<h2>You haven't contacted any brands</h2> <br>You can contact brands on the <br><%= link_to 'All Brands', all_matches_url, remote: true %> or <%= link_to 'Saved Brands', saved_matches_url, remote: true %> screens.
				<% elsif action_name == "index_incoming_matches" %>
					<h2>No brands have contacted you</h2> <br>Make sure <%= link_to 'Your Profile', distributor_full_profile_url %> is complete.
				<% end %>
			</div>
		</div>
	<% else %>

		<div class="row">
			<div class="small-12 columns">

				<table width="100%">
					  <thead>
					  	<tr><th width="800" colspan="2">
								<%= render "counts" %>
					  	</th></tr>
					  	<tr>
					  		<th>
									Company
						  	</th>
					  		<th>
									Country of Origin
						  	</th>
						  </tr>				  	
					  </thead>
				  	<tbody>
						<% @matches.sort_by {|x| [x.country_of_origin, x.company_name] }.each do |match| %>
						<tr id="pot_<%= match.id %>">
							<td>

							<%= render partial: "shared/profile/profile_list_tile", locals: {match: match} %>

							</td>
							<td><%= match.country_of_origin %></td>
						</tr>
						<% end %>
						</tbody>
			</table>
			</div>
		</div>
	<% end %>

<% else %>

	<% if action_name == "index" %>	


		<% if @matches.blank? %>
			<div class="row">
				<div class="small-10 small-centered columns previewtile text-center">
						<h2>No Brands</h2> <br>Please try altering your filter selections.
				</div>
			</div>
		<% else %>

			<div class="row">
				<div class="small-12 columns">

					<table width="100%">
						  <thead>
						  	<tr><th width="800" colspan="2">
									<%= render "counts" %>
						  	</th></tr>
						  	<tr>
						  		<th>
										Company
							  	</th>
						  		<th>
										Country of Origin
							  	</th>
							  </tr>				  	
						  </thead>
					  	<tbody>
							<% @matches.sort_by {|x| [x.country_of_origin, x.company_name] }.each do |match| %>
							<tr id="pot_<%= match.id %>">
								<td>

								<%= render partial: "shared/profile/profile_list_tile", locals: {match: match} %>

								</td>
								<td><%= match.country_of_origin %></td>
							</tr>
							<% end %>
							</tbody>
				</table>
				</div>
			</div>
		<% end %>



	<% else %>

		<div class="row">
			<div class="small-10 small-centered columns previewtile text-center">
				<h2>Available to subscribers only</h2>
			</div>
		</div>

	<% end %>

<% end %>


