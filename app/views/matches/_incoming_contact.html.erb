<% match = this_match(@match) %>
<div class="profile-outer-tile">

	<div class="row">
		<div class="medium-5 columns">
			<h4><strong><%= @match.company_name %></strong><br> would like to start a conversation with you</h4>
		</div>

		<div class="medium-7 columns">
			<div class="bubble-them">
				<%= match.intro_message %>
			</div>
			
			<small>Sent <%= match.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%d %b %Y at %H:%M %Z") %></small>
			
		</div>

	</div>

	<div class="row">
		<div class="small-11 small-centered columns">
			<div class="bubble-you">
				[sample response]
			</div>
		</div>				
	</div>	

</div>