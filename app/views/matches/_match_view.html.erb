<% if @messages %>

<div class="row">
	<div class="small-12 columns">
		<dl class="tabs right" data-tab>	  
		  <dd class="active"><a href="#panel1">Conversation</a></dd>
		  <dd><a href="#panel2">Profile</a></dd>
		</dl>
	</div>
</div>

<div class="tabs-content">

  <div class="content active" id="panel1">
    
		<div class="row">
			<div class="medium-9 medium-push-3 columns previewtile">
				<% if this_match(@match) %>
					<% if i_contacted(this_match(@match)) %>
						<%= render partial: "outgoing_contact" %>
					<% else %>
						<%= render partial: "incoming_contact" %>
					<% end %>
				<% end %>
			</div>
		</div>

  </div>

  <div class="content" id="panel2">
		<div class="row">
			<div class="medium-12 columns previewtile">

				<!-- <div class="row">
					<div class="medium-8 columns">

					</div>
					<div class="medium-2 columns"><%= render partial: "contactbutton", locals: {profile: @match} %></div>
					<div class="medium-2 columns"><%= render partial: "savebutton", locals: {profile: @match} %></div>
				</div> -->

				<% if @current_user.distributor %>

					<% if @current_user.subscriber? %>
						<%= render partial: "/shared/profile/brand_full_profile_tiles", locals: {profile: @match} %>
					<% else %>
						<%= render partial: "/shared/profile/brand_public_profile_tiles", locals: {profile: @match} %>
					<% end %>

				<% elsif @current_user.brand %>

					<% if @current_user.subscriber? %>
						<%= render partial: "/shared/profile/distributor_full_profile_tiles", locals: {profile: @match} %>
					<% else %>
						<%= render partial: "/shared/profile/distributor_public_profile_tiles", locals: {profile: @match} %>
					<% end %>

				<% end %>
			</div>
		</div>
  </div>
</div>

<% else %>

<div class="row">
	<div class="medium-12 columns previewtile">

		<!-- <div class="row">
			<div class="medium-8 columns">

			</div>
			<div class="medium-2 columns"><%= render partial: "contactbutton", locals: {profile: @match} %></div>
			<div class="medium-2 columns"><%= render partial: "savebutton", locals: {profile: @match} %></div>
		</div> -->

		<% if @current_user.distributor %>

			<% if @current_user.subscriber? %>
				<%= render partial: "/shared/profile/brand_full_profile_tiles", locals: {profile: @match} %>
			<% else %>
				<%= render partial: "/shared/profile/brand_public_profile_tiles", locals: {profile: @match} %>
			<% end %>

		<% elsif @current_user.brand %>

			<% if @current_user.subscriber? %>
				<%= render partial: "/shared/profile/distributor_full_profile_tiles", locals: {profile: @match} %>
			<% else %>
				<%= render partial: "/shared/profile/distributor_public_profile_tiles", locals: {profile: @match} %>
			<% end %>

		<% end %>
	</div>
</div>

<% end %>