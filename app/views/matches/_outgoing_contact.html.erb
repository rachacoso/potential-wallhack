<% match = this_match(@match) %>
<div class="profile-outer-tile">

	<div class="row">
		<div class="small-12 columns" style="background: #7ecdec">
			<% if !@messages.blank? %>
				<h4>You started a conversation with <strong><%= @match.company_name %></strong></h4>
			<% else %>
				<h4>You have requested a conversation with <strong><%= @match.company_name %></strong> and are awaiting a response</h4>
			<% end %> 
		</div>
	</div>


	<div class="row">
		<div class="small-11 small-centered medium-9 medium-push-1 columns">
			<div class="bubble-you">
				<%= simple_format(match.intro_message) %>
			</div>
			<div class="text-right"><small>Sent <%= match.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%d %b %Y at %H:%M %Z") %></small></div>
		</div>	
	</div>

	<% if !@messages.blank? %>
	<div id="message-list">
	<%= render 'shared/messages/message_list' %>
	</div>		
	<% end %>


<% if !@messages.blank? %>
	<div class="row">
		<hr>
		<div class="small-12 columns">
				
			<%= form_for Message.new, remote: true do |f| %>
			<div class="row">
				<div class="small-11 small-centered columns">
					<%= f.text_area :text, label: false, id: "message-input", rows: "5" %>
					<%= f.hidden_field :recipient, value: (@current_user.type? == 'distributor' ? 'brand' : 'distributor') %>
					<%= hidden_field_tag :match_id, match.id %>
				</div>
			</div>
			<div class="row">
				<div class="small-11 small-centered columns text-right">
					<%= f.submit 'Send Message', :class => " button tiny expand", :style => "margin-top: 0;" %>
				</div>
			</div>
			<% end %>
			
		</div>				
	</div>
<% end %>

</div>