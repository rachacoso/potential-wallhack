<%= render partial: "shared/topbar" %>

<div class="row collapse">
	<div class="small-11 small-centered columns marketplace-header">
		<%= image_tag "logo_header_marketplace.svg" %>
	</div>
</div>

<div class="row collapse">
	<div class="small-11 small-centered columns" style="background: white;">


<% if @current_user.send(@current_user.type?).sectors.blank? %>
	<div class="row">
		<div class="medium-8 medium-centered columns">
			<div class="panel text-left">
				<div class="row">
					<div class="medium-2 columns">
						<h1>[ <strong style="color: red;">!</strong> ]</h1>
					</div><!--/.medium-4-->
					<div class="medium-10 columns">
						<h3>You don't have you SECTOR designated in 
							<%= link_to 'Your Profile', eval("#{@current_user.type?}_url(:anchor => 'a-sectors')") %>
						</h3>
						<h3>You can't get matched with <%=@current_user.type_inverse?.capitalize%>s without a designated SECTOR.</h3>			
					</div><!--/.medium-10-->
				</div><!--/.row-->
			</div>
		</div><!--/.medium-6 medium-centered-->
	</div><!--/.row-->
<% else %>

	<% case @current_user.type? %>
	<% when 'brand'%>

		<div class="row">
			<div class="medium-3 columns"><h1 style="margin-top: 50px;">FIND DISTRIBUTORS IN NEW MARKETS</h1>		</div><!--/.medium-3-->
			<div class="medium-6 columns">
				<div id="match-map-container">

					<div id="match-search">
						<%= render partial: "brand_search_start" %>
					</div>

				</div><!--/.match-map-container -->
			</div><!--/.medium-6-->
			<div class="medium-3 columns"> &nbsp; </div><!--/.medium-3-->
		</div>

	<% if @country %>	

	<div class="marketplace-content padded">
		<h1><%= @country_proper.upcase %></h1>
		<strong><%= render partial: "counts", locals: {matches: @matches} %></strong>
		<%= paginate @matches %>
		<hr>
		<div id="match-list">
			<div class="row">
				<div class="small-12 columns" >
					<%= render partial: 'brand_match_list', locals: {matches: @matches} %>
				</div>
			</div>
		</div>
	</div>

	<% else %>

	<div class="marketplace-content padded">
		<h1>ALL COUNTRIES</h1>
		<strong><%= render partial: "counts", locals: {matches: @matches} %></strong>
		<%= paginate @matches %>
		<hr>
		<div id="match-list">
			<div class="row">
				<div class="small-12 columns" >
					<%= render partial: 'brand_match_list', locals: {matches: @matches} %>
				</div>
			</div>
		</div>
	</div>

	<% end %>

	<% when 'distributor' %>

		<div class="row">
			<div class="medium-3 columns"><h1 style="margin-top: 50px;">FIND NEW BRANDS</h1>		</div><!--/.medium-3-->
			<div class="medium-8 columns">
				<div id="match-sectors-container">
					<div id="match-search">
						<%= render partial: "distributor_search_start" %>
					</div>
				</div><!--/.match-map-container -->
			</div><!--/.medium-6-->
			<div class="medium-1 columns"> &nbsp; </div><!--/.medium-3-->
		</div>

		<% if @sector %>	
			<div class="marketplace-content padded">
				<h1><%= Sector.find(@sector).name %></h1>
				<strong><%= render partial: "counts", locals: {matches: @matches} %></strong>
				<%= paginate @matches %>
				<% unless @current_user.send(@current_user.type?).sectors.length < 2  %>
				<small><%= link_to 'BROWSE ANOTHER SECTOR', all_matches_url %></small>
				<% end %>
				<hr>
				<div id="match-list">
					<div class="row">
						<div class="small-12 columns" >
							<%= render partial: 'distributor_match_list', locals: {matches: @matches}  %>
						</div>
					</div>
				</div>
			</div>
		<% else %>

			<div class="marketplace-content padded">
				<h1>ALL SECTORS</h1>
				<strong><%= render partial: "counts", locals: {matches: @matches} %></strong>
				<%= paginate @matches %>
				<hr>
				<div id="match-list">
					<div class="row">
						<div class="small-12 columns" >
							<%= render partial: 'brand_match_list', locals: {matches: @matches} %>
						</div>
					</div>
				</div>
			</div>

		<% end %>

	<% end %>


<% end %>

	</div><!--/.small-12 medium-10 -->
</div><!--/.row-->

