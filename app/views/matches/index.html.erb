<%= render partial: "shared/topbar" %>



<% content_for :subnav do %>
<div class="row">
	<div class="small-12 columns">
		<ul class="breadcrumbs">
			<% matchtype = @current_user.distributor ? "Brand" : "Distributor" %>
		  <li class="current"><%= link_to "Your #{matchtype} Matches", "#" %></li>
		</ul>
	</div>
</div>
</div>
<% end %>

<div class="row">
<div class="medium-9 push-3 columns">
	<% matchtype = @current_user.distributor ? "Brands" : "Distributors" %>
	<ul class="button-group even-4">
  <li><%= action_name == "index" ? (link_to "All #{matchtype}", all_matches_url, class: "tiny button info") : (link_to "All #{matchtype}", all_matches_url, class: "tiny button secondary") %></li>
  <li><%= action_name == "index_saved_matches" ? (link_to "Saved #{matchtype}", saved_matches_url, class: "tiny button info") : (link_to "Saved #{matchtype}", saved_matches_url, class: "tiny button secondary") %></li>
  <li><%= action_name == "index_contacted_matches" ? (link_to "#{matchtype} you contacted", contacted_matches_url, class: "tiny button info") : (link_to "#{matchtype} you contacted", contacted_matches_url, class: "tiny button secondary") %></li>
  <li><%= action_name == "index_incoming_matches" ? (link_to "#{matchtype} contacting you", incoming_matches_url, class: "tiny button info") : (link_to "#{matchtype} contacting you", incoming_matches_url, class: "tiny button secondary") %></li>
	</ul>
</div>
</div>

<% if @current_user.brand %>

	<%= render partial: "brand" %>

<% else %>

	<%= render partial: "distributor" %>

<% end %>
