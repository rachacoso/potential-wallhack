$('#match-list').hide().html("<%= j (render 'brand_match_list') %>").fadeIn(500);



<% case action_name %>
<% when "index" %>
	$('#filter-form-container').fadeIn(500);
	$('.match-groups').removeClass('info').addClass('secondary');
	$('#all-matches-url').removeClass('secondary').addClass('info');
<% when "index_saved_matches" %>
	$('#filter-form-container').fadeOut(500);
	$('.match-groups').removeClass('info').addClass('secondary');
	$('#saved-matches-url').removeClass('secondary').addClass('info');
<% when "index_contacted_matches" %>
	$('#filter-form-container').fadeOut(500);
	$('.match-groups').removeClass('info').addClass('secondary');
	$('#outgoing-matches-url').removeClass('secondary').addClass('info');
<% when "index_incoming_matches" %>
	$('#filter-form-container').fadeOut(500);
	$('.match-groups').removeClass('info').addClass('secondary');
	$('#incoming-matches-url').removeClass('secondary').addClass('info');
<% end %>