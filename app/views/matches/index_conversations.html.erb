<% matchtype = @current_user.type? == "distributor" ? "Brands" : "Distributors" %>
<%= render partial: "shared/topbar" %>


<div class="row collapse">
	<div class="small-12 columns" id="page-content">
		

<% if @current_user.subscriber? %>

	<% if @matches_accepted.blank? && @matches_incoming_waiting.blank? && @matches_outgoing_waiting %>

		<%= render "no_matches" %>

	<% else %>

		<% unless @matches_accepted.blank? %>
		<div class="messages-panel">
		<h2>In Conversation</h2>
		<small><strong><%= render partial: "counts", locals: {matches: @matches_accepted} %></strong></small>
		<hr>		
		<div class="saved-contacted-match-list">
		<%= render partial: "#{@current_user.type?}_match_list", locals: {matches: @matches_accepted} %>
		</div>
		</div>
		<% end %>

		<% unless @matches_accepted.blank? || ( @matches_incoming_waiting.blank? && @matches_outgoing_waiting.blank? ) %>
		<hr>
		<% end %>

		<% unless @matches_incoming_waiting.blank? %>
		<div class="messages-panel">
		<h2>New Request - Awaiting Your Response</h2>
		<small><strong><%= render partial: "counts", locals: {matches: @matches_incoming_waiting} %></strong></small>
		<hr>
		<div class="saved-contacted-match-list">
		<%= render partial: "#{@current_user.type?}_match_list", locals: {matches: @matches_incoming_waiting} %>
		</div>
		</div>
		<% end %>

		<% unless @matches_outgoing_waiting.blank? || ( @matches_incoming_waiting.blank? && !@matches_outgoing_waiting.blank? )  %>
		<hr>
		<% end %>

		<% unless @matches_outgoing_waiting.blank? %>
		<div class="messages-panel">
		<h2>New Request - Awaiting Their Response</h2>
		<small><strong><%= render partial: "counts", locals: {matches: @matches_outgoing_waiting} %></strong></small>
		<hr>
		<div class="saved-contacted-match-list">
		<%= render partial: "#{@current_user.type?}_match_list", locals: {matches: @matches_outgoing_waiting} %>
		</div>
		</div>
		<% end %>

	<% end %>

<% else %>
	<div class="row">
	  <div class="small-6 small-centered text-center columns">
	    <h1>Available to subscribers only</h1>
	    <% if @messages_unread > 0 || @new_contact_messages > 0 %>
				<div class="panel text-left">
					<div class="row">
						<div class="medium-2 columns">
							<h1>[ <strong style="color: red;">!</strong> ]</h1>
						</div><!--/.medium-4-->
						<div class="medium-10 columns">
							<h3> A <%= @current_user.type_inverse? %> is interested in communicating with you.  <%= link_to 'SUBSCRIBE', '#' %> to connect! to initiate/resume contact. </h3>							
						</div><!--/.medium-10-->
					</div><!--/.row-->
				</div>
	    <% end %>
	  </div><!--/.small-11 small-centered text-center-->
	</div><!--/.row-->
<% end %>

	</div><!--/.medium-10-->
</div>
