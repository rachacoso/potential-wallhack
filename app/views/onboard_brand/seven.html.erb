<%= render partial: "shared/topbar" %>
<%= render layout: "shared/panel" do %>

	<div class="row">
		<div class="medium-12 columns">
			<div class="row">
				<div class="small-12 columns">
					<h1>Countries of Export</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="medium-10 columns push-2">
			<br>
			<div class="onboard-instructions smaller">
				Tell us what international markets you currently exports your products to. <br><br>
				This information is ONLY shared with distributors that you have approved to see your full profile. <br>[ADD INFO ABOUT WHAT DISTRIBUTORS CAN SEE WHEN]
			</div>
			<hr>
		</div>
	</div>

	<div class="row">
		<div class="medium-6 medium-centered columns">

			<div class="groupwrapper">

			<div class="rowitem">				
				<div class="rowheadback">
					<div class="row">
						<div class="medium-8 columns">
							Export Countries
						</div>
						<div class="medium-4 columns">
							&nbsp;
						</div>
					</div>
				</div>	
			</div>			


			<div id="export-countries-list">

			<%= render "shared/profileform/export_countries_list" %>
			 
			</div> <!-- /.export-countries-list -->


				<div class="rowitem">
				<div class="row">
					<div class="medium-12 columns">
						<hr>
						<%= form_for @new_export_country, :html => { :id => "new_export_country" }, remote: true do |f| %>
						<div class="rowheadback addnew">
							<div class="row">
								<div class="medium-8 columns">
									Add a Country
								</div>
								<div class="medium-4 columns">
									&nbsp;
								</div>
							</div>
						</div>	
						<div class="row">
							<div class="medium-8 columns">
								<%= f.text_field :country, class: "country-autocomplete-multi", label: false, placeholder: 'Country' %>
							</div>
							<div class="medium-4 columns text-left">
								<%= f.submit "ADD", class: "tiny button submit" %>
								<%#= link_to 'Add', "#", :onclick => "$('#new_export_country').submit()".html_safe %>
							</div>
						</div>				
						<% end %>
					</div>
				</div>
				</div>

			</div> <!-- /.groupwrapper -->

		</div>
	</div>


		
		<%= button_to "Next", onboard_brand_eight_url, method: :get, class: "tiny radius alert button right"%>
		<%= render "shared/profileform/return_later" %>

<% end %>


