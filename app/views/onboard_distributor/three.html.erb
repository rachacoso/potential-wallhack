<%= render partial: "shared/topbar" %>

<%= render layout: "shared/panel" do %>

	<div class="row">
		<div class="medium-12 columns">
			<h1>Sector and Channel Profile</h1>
			<div class="row">
				<div class="medium-10 medium-centered columns text-center">
					<br>
					<div class="onboard-instructions">Instructions here...</div>
					<hr>
				</div>
			</div>
		</div>
	</div>

	<%= form_for @distributor, url: distributor_url do |f| %>
	<%= hidden_field_tag :redirect, 'three_a' %>	
	<div class="row">
		<div class="medium-10 medium-centered columns">
		<%= f.hidden_field :name %>		
		<h3>Sectors</h3>
			<% Sector.each do |sc| %>
		    <div>
		      <%= check_box_tag "sectors[#{sc.id}]", sc.id, (@distributor.sectors.find(sc) rescue false) ? true : false %>
		      <%= label_tag("sectors[#{sc.id}]", sc.name) %>
		    </div>
		  <% end %>
		</div>
	</div>
	<div class="row">
		<div class="medium-10 medium-centered columns">						
			<h3>Channels</h3>
			<% Channel.each do |ch| %>
		    <div>
		    	<%= check_box_tag "channels[#{ch.id}]", ch.id, (@distributor.channels.find(ch) rescue false) ? true : false  %>
		      <%= label_tag("channels[#{ch.id}]", ch.name) %>
		    </div>
		  <% end %>
		</div>
	</div>
	<div class="row">
		<div class="medium-10 medium-centered columns">
			<%= f.submit 'Select and Continue', class: "tiny radius success button right" %>
		</div>
	</div>
	<% end %>

<% end %>
