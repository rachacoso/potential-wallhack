<% urlstring = cb.class.name.tableize.singularize + "_url(cb" + ((controller_name == "onboard_distributor") || (controller_name == "onboard_brand") ? ", :ob => 'true'" : "") + ")" %>

		<a class="anchor" id="a-<%= cb.id %>"></a>
		<div class="rowitem">
		<div class="row">
			<div class="medium-12 columns">
				<dl class="accordion" data-accordion>
				  <dd class="accordion-navigation <%= collection_item_active(cb.id) %>">
				    <a href="#a_<%= cb.id %>"><%= cb.send(identifier).empty? ? "( No Name )" : cb.send(identifier)  %>
			    	<% if has_picture_list(cb) %>
					   	<% if cb.product_photos %>
								<% cb.product_photos.each do |photo| %>
									<%= image_tag photo.photo.url(:small), :width => '25', :height => '25' %>
								<% end %>
							<% end %>
						<% end %>
						<%= cb.class.name == "PressHit" ? cb.date.strftime("// %B %d %Y") : "" rescue nil %>
				    <span class="right" style="color: #4D94DB;">(click to edit)</span></a>
				    <div id="a_<%= cb.id %>" class="content <%= collection_item_active(cb.id) %>">

							<%= form_for cb do |f| %>
							<%= (controller_name == "onboard_distributor") || (controller_name == "onboard_brand") ? (hidden_field_tag :ob, "true") : "" %>
							<div class="updateform">
								<%= render partial: "shared/collections/#{cb.class.name.tableize}", locals: {f: f, cb: cb} %>
							</div>
							<div class="row">
								<div class="medium-8 columns">
									&nbsp;
								</div>
								<div class="medium-4 columns text-right">
									<%= link_to 'Update', "#", :onclick => "$('#edit_#{dom_id(cb)}').submit()".html_safe %>
									<%= link_to 'Delete', eval(urlstring), :method => :delete, data: { :confirm => "Are you sure you want to delete #{cb.send(identifier)}?"}%>
								</div>
							</div>
							<% end %>

							<%#  PICTURE ADD for BRAND PRODUCTS %>
							<% if has_picture_list(cb) %>
							<div class="row">
								<div class="small-12 columns">
									<hr>
									
									<% if cb.product_photos %>
										<% cb.product_photos.each do |photo| %>
											
												<%= image_tag photo.photo.url(:small) %>
												<%= link_to 'X', product_photo_delete_url(photo), :method => 'delete', data: { :confirm => 'Are you sure you want to delete this photo?'}  %>
											<br>
										<% end %>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="small-6 columns">
									<%= form_for(ProductPhoto.new) do |f| %>
										<%= hidden_field_tag 'product_id', cb.id %>
							      <div class="row collapse">
							        <div class="small-6 columns">
							          <%= f.file_field :photo, label: "&nbsp;".html_safe, accept: 'image/png,image/gif,image/jpeg' %>
							        </div>
							        <div class="small-6 columns">
							          <%= f.submit 'Add Product Photo', :class=> 'button small postfix' %>
							        </div>
							      </div>

										
										
									<% end %>

								</div>
							</div>
							<% end %>

						</div>
					</dd>
				</dl>

			</div>
		</div>
		</div>