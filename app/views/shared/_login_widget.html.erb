<div class="row">
	<div id="loginwidget">
		<div class="medium-5 columns">
			<%= form_tag '/login', method: 'post' do %>
				<%= email_field_tag :email, '', placeholder: 'email'%> 
		</div>
		<div class="medium-5 columns">
			<%= password_field_tag :password, '', placeholder: 'password' %>
		</div>
		<div class="medium-2 columns">
				<%= submit_tag 'login', class: "tiny radius success button" %>
			<% end %>
		</div>
		<% if flash[:notice] %>
			<div class="medium-12 columns errornotice"><%= flash[:notice] %></div>
		<% end %>
	</div>
</div>