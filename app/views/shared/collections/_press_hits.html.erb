
<% deleteclip_urlstring = "press_hits_file_delete_url(cb" + ((controller_name == "onboard_distributor") || (controller_name == "onboard_brand") ? ", :ob => 'true'" : "") + ")" %>

<div class="row">
	<div class="medium-12 columns">
		<%= f.text_field :source, label: "Source", placeholder: 'Source' %>
	</div>
</div>
<div class="row">
	<div class="medium-8 columns">

		<div class="row collapse">
			<%= label_tag(:link, "Link") %>
			<div class="small-2 columns">
				<span class="prefix">http://</span>
			</div>
			<div class="small-10 columns">
				<%= f.text_field :link, label: false %>
			</div>
		</div>

	</div>
	<div class="medium-4 columns">
		<% if defined?(cb) && cb.date %>
			<%= f.text_field :date, label: "Date", value: cb.date.strftime("%m/%d/%Y"), placeholder: 'Date' , class: "datepick_full" %>
		<% else %>
			<%= f.text_field :date, label: "Date", placeholder: 'Date' , class: "datepick_full" %>
		<% end %>
	</div>									
</div>
<div class="row">			
	<div class="medium-5 columns">
		
			<%= f.label :file, "Press Clipping" %>

			<% if defined?(cb) && cb.file.exists? %>
			<h3><small><strong><%= cb.file_file_name %></strong></small></h3>
			<%= link_to "View", cb.file.url, :target => "_blank" %> 
			<%= link_to 'Delete', eval(deleteclip_urlstring), :method => :delete, data: { :confirm => "Are you sure you want to delete this clipping?"}%>
			<hr>
			<% end %>

      <%= f.file_field :file, label: false, accept: 'application/pdf,application/vnd.ms-powerpoint,application/msword,application/vnd.openxmlformats-officedocument.presentationml.slideshow,application/vnd.openxmlformats-officedocument.presentationml.presentation,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/pngimage/gif' %>


	</div>
	<div class="medium-7 columns">
		<%= f.text_area :quotes, label: "Quotes", placeholder: 'Quotes' %>
	</div>				
</div>